        <li class="nav-item">
          <%= link_to "Posts", photos_path, class: "nav-link", style: "color: black;" %>
        </li>
       
        <li class="nav-item">
          <%= link_to "Profile",home_profile_path, class: "nav-link", style: "color: black;" %>
        </li>

        <li class="nav-item">
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link btn ", style: "color: black;" %>
